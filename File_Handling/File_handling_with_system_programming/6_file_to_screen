#include<stdio.h>
#include<unistd.h>
#include<fcntl.h>
int main()
{
	int bytes_read;
	char err[] = "\nCant Open Source File\n";
	char szText[1024];
	
	int fd = open("file_to_screen.txt",O_RDONLY);
	
	if(-1 == fd)
	{
		write(STDOUT_FILENO, err, sizeof(err));
		return -1;
	}
	
	while(1)
	{
		bytes_read = read(fd, szText, 1023);
		
		if(bytes_read == 0)
			break;
			
		printf("%s",szText);
	}	
	close(fd);
	return 0;
}
